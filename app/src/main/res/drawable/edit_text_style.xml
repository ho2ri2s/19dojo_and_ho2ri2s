<?xml version="1.0" encoding="utf-8"?>
<!-- layer-listでitemを重ねられます。 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- item① -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- item②に対して2dp内側に入る。 -->
            <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
            <!-- 色:パープル -->
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

    <!-- item② -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- item③に対して2dp内側に入る。 -->
            <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
            <!-- 色:白 -->
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- item③ -->
    <item>
        <!-- shape:rectangle(=四角形) -->
        <shape android:shape="rectangle">
            <!-- 色:パープル -->
            <!-- angle:角度、type:linear(=線形) -->
            <gradient
                    android:angle="90"
                    android:endColor="#DA80D6FF"
                    android:startColor="@color/colorPrimary"
                    android:type="linear" />
        </shape>
    </item>

</layer-list>